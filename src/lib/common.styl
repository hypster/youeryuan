.formWrap
  position relative
  width 400px
  padding 50px
  box-sizing border-box
  background-color #f4f4f4
  position fixed
  top 50%
  left 50%
  transform translate(-50%, -50%)
  text-align center 
  .avatar
    position absolute
    top 0
    left 50%
    transform translate(-50%, -50%)
  .font
    margin-top 40px 
  button.login, button.register
    width 100%
    height 50px
    display block
    background-color #7cb92f
    outline none 
    border none
    font-size 18px
    color #fff
    font-weight 700
    box-shadow 3px 3px 5px #aaa
    margin-top 10px
    &.disabled:hover
      cursor wait
      
  form 
    margin-top 20px
    text-align left 
    display flex
    flex-direction column
    justify-content flex-start
    label 
      background-color #fff
      padding 10px 10px 0
      margin-bottom 10px
      font-size 14px
    input 
      border none
      margin-bottom 10px
      &:focus
        outline none
    label.verificationCode
      padding-right 0
      position relative
      button.getCode
        position absolute
        right 0
        top 0
        height 42px
        border none
        background-color #7cb92f
        color #fff
        font-size 12px
        transition all 0.5s
        &.disabled
          background-color #ccc
          pointer-events none
    p.countdown
      font-size 12px
      margin-bottom 10px
      margin-top -10px

.fade-enter-active, .fade-leave-active 
  transition: opacity .3s ease
.fade-enter, .fade-leave-to
  opacity: 0

